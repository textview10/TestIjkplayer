<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:orientation="vertical">

    <com.test.ijkplayer_view.widget.NotDispatchLineLayout
        android:id="@+id/ll_media_controller_top"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:alpha="0.6"
        android:background="#000000"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_ijkview_videoplay_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_ijkview_back" />

        <TextView
            android:id="@+id/tv_ijkview_videoplay_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/ijkplayer_white" />

        <ImageView
            android:id="@+id/iv_ijk_media_controller_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_ijkview_download" />

        <ImageView
            android:id="@+id/iv_ijk_media_controller_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_ijkview_share" />
    </com.test.ijkplayer_view.widget.NotDispatchLineLayout>

    <com.test.ijkplayer_view.widget.NotDispatchLineLayout
        android:id="@+id/ll_media_controller_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.6"
        android:background="#000000"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_ijkview_pause" />

        <SeekBar
            android:id="@+id/sk_ijkview_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_ijkview_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:text="00:00/12:00"
            android:textColor="@color/ijkplayer_white"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/iv_ijkview_mediacontroller_danmaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/ic_video_play_danmuku_on" />

        <ImageView
            android:id="@+id/iv_ijkview_mediaontroller_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="3dp"
            android:src="@drawable/ic_video_play_high_quality" />

        <ImageView
            android:id="@+id/iv_ijkview_mediaontroller_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="6dp"
            android:src="@drawable/ic_video_play_normal_quality" />


        <ImageView
            android:id="@+id/iv_ijkview_mediacontroller_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_ijkview_fullscreen" />
    </com.test.ijkplayer_view.widget.NotDispatchLineLayout>

    <com.test.ijkplayer_view.widget.NotDispatchRelativelayout
        android:id="@+id/rl_ijkview_state_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pb_ijkview_mediacontroller_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />


            <TextView
                android:id="@+id/tv_ijkview_mediacontroller_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="加载中..."
                android:textColor="@color/ijkplayer_white" />
        </LinearLayout>


    </com.test.ijkplayer_view.widget.NotDispatchRelativelayout>
</RelativeLayout>